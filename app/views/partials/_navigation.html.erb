<header>
	<nav class="be-red white large-padding">
		<ul class="no-list row center-xs middle-xs">
			<li class="col-md">
				<h1 class="no-margin" id="logo"><%=link_to "Blog Facilito", root_path%></h1>
			</li>
			
			<li class="col-md">
				<%= link_to "Articulos", articles_path %>
			</li>
			<li>
				<% @categories.each do |category| %>
					<li class="col-md">
						<%= link_to category.name, category %>
					</li>	
				<% end %>
			</li>
			<% if user_signed_in? %>
				<% if current_user.is_admin? %>
					<li class="col-md">
						<%= link_to "Dashboard", dashboard_path %>
					</li>
				<% end %>
				
				<li class="col-md">
					<%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %>
				</li>
			<% else %>
				<li class="col-md">
					<%= link_to "Iniciar Sesión", new_user_session_path %>
				</li>
				<li class="col-md">
					<%= link_to "Crear Cuenta", new_user_registration_path %>
				</li>
			<% end -%>
		</ul>
	</nav>
</header>